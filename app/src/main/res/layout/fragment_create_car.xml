<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Tittle_Create"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:gravity="center_horizontal"
                android:text="CREA UN NUEVO VEHÍCULO"
                android:textColor="@android:color/white"
                android:textSize="32sp" />


            <LinearLayout
                android:id="@+id/Lplaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idPlaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placa:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/Placa_Let"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/box"
                    android:ems="10"
                    android:hint="ABC"
                    android:inputType="textPersonName|textCapCharacters"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />

                <TextView
                    android:id="@+id/id-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="32sp" />

                <EditText
                    android:id="@+id/Placa_num"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/box"
                    android:ems="10"
                    android:hint="123"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LOwner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Propietario:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nPropietario"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/box"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Nombre Propietario"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LMarca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idMarca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nMarca"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/box"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Marca"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idLinea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linea:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nLinea"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/box"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Linea"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idModelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modelo:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nModelo"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/box"
                    android:ems="10"
                    android:hint="2001"
                    android:inputType="text|number"
                    android:maxLength="4"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idUMant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="2020-01-01"
                    android:text="Ult. Mantenimiento:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nUMant"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/box"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:hint="2020-01-01"
                    android:inputType="date"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idFrecuencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia (días):"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nFcMant"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/box"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="15"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Vencimientos"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idSOAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOAT:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nSOAT"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="55dp"
                    android:background="@drawable/box"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:hint="2020-01-01"
                    android:inputType="date"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idRTM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RTM:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nRTM"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="62dp"
                    android:background="@drawable/box"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:hint="2020-01-01"
                    android:inputType="date"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idPol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Póliza:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nPol"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="49dp"
                    android:background="@drawable/box"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:hint="2020-01-01"
                    android:inputType="date"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/idImp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Impuesto:"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nImp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/box"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:hint="2020-01-01"
                    android:inputType="date"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/GrayWhite" />
            </LinearLayout>

            <Button
                android:id="@+id/savebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="32dp"
                android:background="@drawable/btnredondo"
                android:clickable="true"
                android:contextClickable="true"
                android:text="Guardar"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>